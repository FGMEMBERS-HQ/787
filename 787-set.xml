<input>
	<keyboard>
		<key n="127">
			<name>Delete</name>
			<desc>Toggle Reversers</desc>
			<binding>
				<command>nasal</command>
				<script>reversethrust.togglereverser()</script>
			</binding>
		</key>
		<key n="9">
			<name>Tab</name>
			<desc>switch autobrake</desc>
			<binding>
				<command>property-cycle</command>
				<property>/controls/gear/autobrakes</property>
				<value>0</value>
				<value>0.2</value>
				<value>0.4</value>
				<value>0.6</value>
				<value>0.8</value>
				<value>1</value>
				<value>1.2</value>
			</binding>
			<mod-shift>
				<binding>
					<command>nasal</command>
					<script>autobrakes.resetabrakes();</script>
				</binding>
			</mod-shift>
		</key>
		<key n="2">
			<name>Ctrl-B</name>	
			<desc>Toggle speedbrake</desc>
			<binding>
				<command>property-toggle</command>
				<property>/controls/flight/spoiler</property>
				<value>0</value>
				<value>3</value>
			</binding>
		</key>
		<key n="107">
			<name>k</name>
			<desc>Extend speedbrakes</desc>
			<binding>
				<command>property-adjust</command>
				<property>/controls/flight/spoiler</property>
				<step>1</step>
				<min>0</min>
				<max>3</max>
			</binding>
		</key>
		<key n="106">
			<name>j</name>
			<desc>retract speedbrakes</desc>
			<binding>
				<command>property-adjust</command>
				<property>/controls/flight/spoiler</property>
				<step>-1</step>
				<min>0</min>
				<max>3</max>
			</binding>
		</key>
  <key n="50">
  <name>2</name>
  <desc>Decrease flaps.</desc>
  <binding>
   <command>nasal</command>
   <script>controls.flapsDown(-1)</script>
  </binding>
